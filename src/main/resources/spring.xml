<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
 		http://www.springframework.org/schema/util
 		http://www.springframework.org/schema/util/spring-util-4.2.xsd">


    <import resource="mysql-connection.xml"/>
    <!--<import resource="menu-loader.xml"/>-->

    <bean id="appMenu" class="consoleui.AppMenu">
        <constructor-arg ref="userService"/>
        <constructor-arg ref="eventService"/>
        <constructor-arg ref="utils"/>
    </bean>

    <bean id="theaterManagerApp" class="StartConsoleApp">
        <constructor-arg ref="appMenu"/>
    </bean>

    <!--Services-->
    <bean id="userService" class="services.impl.UserServiceImpl">
        <constructor-arg ref="userDao"/>
    </bean>
    <bean id="eventService" class="services.impl.EventServiceImpl">
        <constructor-arg ref="eventDao"/>
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref="dateFormat"/>
    </bean>

    <!--DAO-->
    <bean id="userDao" class="daos.impl.UserDaoImpl">
        <constructor-arg ref="dataSource"/>
        <constructor-arg ref="utils"/>
    </bean>

    <bean id="eventDao" class="daos.impl.EventDaoImpl" scope="prototype">
        <constructor-arg ref="dataSource"/>
        <constructor-arg ref="utils"/>
    </bean>

    <bean id="utils" class="utils.Utils">
        <constructor-arg ref="dataSource"/>
    </bean>
    <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>

</beans>
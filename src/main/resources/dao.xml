<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd"
        default-lazy-init="true">

    <!--DAO-->
    <bean id="userDao" parent="auditoriumService"  class="daos.impl.UserDaoImpl">
        <constructor-arg ref="dataSource"/>
    </bean>

    <bean id="eventDao" parent="auditoriumService"  class="daos.impl.EventDaoImpl" scope="prototype">
        <constructor-arg ref="dataSource"/>
    </bean>
    <bean id="bookingDao" parent="auditoriumService" class="daos.impl.BookingDAOImpl" scope="prototype">
        <constructor-arg ref="dataSource"/>
        <constructor-arg ref="userService"/>
        <constructor-arg ref="eventService"/>
        <constructor-arg ref="auditoriumService"/>
    </bean>

</beans>